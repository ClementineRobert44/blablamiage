{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Mise à jour</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.sexe) }}
        {{ form_row(form.dateNaissance) }}
        {{ form_row(form.bio) }}
        {{ form_row(form.tel) }}
        {{ form_row(form.animaux) }}
        {{ form_row(form.cigarette) }}
        {{ form_row(form.theme) }}

        <button class="btn">Mettre à jour</button>
    {{ form_end(form) }}
{% endblock %}
