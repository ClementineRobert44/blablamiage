{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détail sur <i>{{ utilisateur.nom }}</i> <i> {{ utilisateur.prenom }} </i></h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>{{ utilisateur.prenom }}</strong> <i>({{ utilisateur.prenom }})</i></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ utilisateur.prenom }}</i>
                </div>
            </div>

            <p>
                <strong>{{ utilisateur.prenom }}</strong>
                <small> - <i>{{ utilisateur.prenom }}</i></small>
            </p>

            <p>{{ utilisateur.bio|nl2br }}</p>

            <p>
                <strong>Email de contact :</strong> {{ utilisateur.bio }}
            </p>
            <p>
                <strong>Date d'expirtaion :</strong> {{ utilisateur.bio }}
            </p>

            {% for trajetPoste in trajetsPostes %}
                <p>
                <strong>Mes trajets postés :</strong> {{ trajetPoste.id }}
            </p>
            {% endfor %}

            {% for trajetReserve in trajetsReserves %}
                <p>
                <strong>Mes trajets reservés:</strong> {{ trajetReserve.id }}
                </p>
                <td><a href="{{ path('commentaire.new', {id:trajetReserve.id})}}">Commenter ce trajet</a></td>
            {% endfor %}
            
            <div class="row">
                <div class="col-sm-12 text-right">
                    

                    
                    <a class="btn btn-danger" href="{{ path('user.delete', {slug:utilisateur.slug})}}">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}